extends layout 

block content 
    div.authentication-forms-container
        div
            div
                h2 Connect to your account
            div.login-form
                form(action="/users", method="post") 
                    input(type="email", name="username", placeholder="Enter username here", required="true")
                    input(type="password", name="password", placeholder="Enter your password here", required="true", pattern="^(?=.*\\d)(?=.*[A-Z])(?=.*[a-z])(?=.*[^\\w\\d\\s:])([^\\s]){8,16}$")
                    input(type="submit", value="connect")
            div
                h2 Create your account
            div.create-user-form
                form(action="/users/new", method="post") 
                    input(type="email", name="username", placeholder="Enter username here", required="true")
                    p Input a password that is at least 8 characters long and has a LowerCase, UpperCase, one digit, one special character
                    input(type="password", name="password", placeholder="Enter your password here", required="true", pattern="^(?=.*\\d)(?=.*[A-Z])(?=.*[a-z])(?=.*[^\\w\\d\\s:])([^\\s]){8,16}$")
                    input(type="submit", value="create account")